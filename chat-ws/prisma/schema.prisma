generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum ChatType {
  DIRECT
  GROUP
}

enum ChatMemberRole {
  ADMIN
  MEMBER
}

model Chat {
  id        String @id @default(uuid())
  type      ChatType
  userA     String
  userB     String
  createdBy String
  createdAt DateTime @default(now())

  members   ChatMember[]
  messages  Message[]

}

model ChatMember {
  id           String @id @default(uuid())
  chatId       String
  userId       String
  role         ChatMemberRole @default(MEMBER)
  joinedAt     DateTime @default(now())

  chat         Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@unique([chatId, userId])
  @@index([userId])
}

model Message {
  id           String @id @default(uuid())
  chatId       String
  senderId     String
  content      String
  createdAt    DateTime @default(now())

  chat Chat @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@index([chatId])
  @@index([senderId])
}