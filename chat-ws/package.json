    "jsonwebtoken": "^9.0.3",
    "redis": "^5.11.0",
    "socket.io": "^4.8.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.2.2",
    "@types/pg": "^8.16.0",
    "@types/socket.io": "^3.0.1",
    "nodemon": "^3.1.11",
    "prisma": "^7.4.0",
    "ts-node": "^1.7.1",
