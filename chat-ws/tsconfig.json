{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2023",
    "types": ["node"],
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "allowImportingTsExtensions": true,
    "noEmit": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}