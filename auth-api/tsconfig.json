{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "types": ["node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true,
  },
  "include": [
    "src/**/*",
    "prisma.config.ts",
    "prisma/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}