{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2023",
    "types": ["node"],
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    },
    "allowImportingTsExtensions": false,
    "noEmit": false,
  },
  "include": [
    "src/**/*",
    "prisma.config.ts",
    "prisma/**/*"
  ],
  "exclude": [
    "node_modules", 
    "dist",
  ]
}